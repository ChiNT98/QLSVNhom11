@model IEnumerable<QUANLYSINHVIEN.Models.SinhVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Mod/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <p>
        Tìm Kiếm: @Html.TextBox("SearchString")
        <input type="submit" value="Tìm Kiếm" />
    </p>
}
<table class="table">
    <tr>
        @Html.ActionLink("Sắp xếp theo Mã Sv", "Index", new { sortOrder = ViewBag.MaSortParm })
        <th>Mã Sinh Viên  </th>
        <th>Tên Sinh Viên  </th>
        <th>Giới Tính</th>
        <th> Ngày Sinh </th>
        <th> Mã Lớp</th>
        <th> Mã Khoa</th>
        <th>Số Điện thoại</th>
        <th>Địa chỉ</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaSv)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenSv)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GioiTinh)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NgaySinh)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MaLop)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MaKhoa)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SDT)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DiaChi)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.MaSv }) |
        @Html.ActionLink("Details", "Details", new { id = item.MaSv }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.MaSv })
    </td>
</tr>
    }

</table>
